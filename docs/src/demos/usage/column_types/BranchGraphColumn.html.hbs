<div id="sample1" class="demo-grid middle">
</div>
<div>
	<label style="vertical-align: top;">data:</label>
	<textarea id="command" style="height: 100px; vertical-align: top;"></textarea>
	<button id="add" style="vertical-align: top;">add</button>
</div>
<script type="text/javascript">
//{{#wrapscript}}
//{{#copy "sample1"}}
/*global cheetahGrid*/
'use strict';

const grid = new cheetahGrid.ListGrid({
	parentElement: document.querySelector('#sample1'),
	header: [
		{
			field: 'data',
			caption: 'BranchGraph',
			width: 200,
			columnType: new cheetahGrid.columns.type.BranchGraphColumn({cache: false}),
		},
		{
			field(rec) {
				return JSON.stringify(rec.data);
			},
			caption: 'command',
			width: 1000
		},
	],
	frozenColCount: 1
});
grid.records = [
	{data: [
		{
			command: 'tag',
			branch: 'mastar',
			tag: 'v1.0.0'
		},
		{
			command: 'commit',
			branch: 'mastar'
		}
	]},
	{data: [
		{
			command: 'branch',
			branch: {
				from: 'develop',
				to: 'develop2'
			}
		}, {
			command: 'commit',
			branch: 'develop2'
		}
	]},
	{data: {
		command: 'merge',
		branch: {
			from: 'develop',
			to: 'mastar'
		}
	}},
	{data: {
		command: 'commit',
		branch: 'develop'
	}},
	{data: null},
	{data: {
		command: 'branch',
		branch: {
			from: 'mastar',
			to: 'develop'
		}
	}},
	{data: {
		command: 'commit',
		branch: 'mastar'
	}},
	{data: [
		{
			command: 'branch',
			branch: 'mastar'
		}, {
			command: 'commit',
			branch: 'mastar'
		}
	],
	},
];

//{{/copy}}
document.querySelector('#add').onclick = () => {
	grid.records = [{data: JSON.parse(document.querySelector('#command').value)}, ...grid.records];
};

//{{/wrapscript}}
</script>
