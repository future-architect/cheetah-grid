.theme-default-content:not(.custom), .page-edit, .page-nav
    width 88%
    max-width 1280px
.theme-container .sidebar > .sidebar-links
    > li:not(:first-child)
        margin-top 0.15rem
    > li > a.sidebar-link
        font-size 1.1em
        line-height 1.4
        font-weight 500

.demo-grid
    width 100%
    height 300px
    box-sizing border-box
    border solid 1px #ddd
    flex-glow: 1

    &.large
        height 500px
    &.middle
        height 300px
    &.small
        height 240px

.theme-default-content .cheetah-grid__tooltip-element__content
    padding 0
    margin 0
